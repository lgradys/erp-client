                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </ImageView>
            <Button fx:id="dataButon" alignment="CENTER" mnemonicParsing="false" styleClass="menu-button" text="DATA">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="settingsButton" mnemonicParsing="false" styleClass="menu-button" text="SETTINGS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="logoutButton" mnemonicParsing="false" styleClass="menu-button" text="LOGOUT">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <VBox alignment="CENTER" spacing="10.0" visible="false">
         <children>
            <HBox alignment="CENTER" spacing="10.0" styleClass="info-container">
               <children>
                  <Label text="Username" />
                  <TextField fx:id="usernameField" editable="false" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0" styleClass="info-container">
               <children>
                  <Label text="Role" />
                  <TextField fx:id="roleField" editable="false" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0" styleClass="info-container">
               <children>
                  <Label text="Authentication token" />
                  <TextField fx:id="tokenField" editable="false" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <stylesheets>
      <URL value="@../../../css/global.css" />
      <URL value="@../../../css/profile.css" />
   </stylesheets>
